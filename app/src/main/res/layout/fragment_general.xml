<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bw"
    android:id="@+id/frgmCont"
    tools:context=".presentation.MainActivity">


    <TextView
        android:id="@+id/textOnMainScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_weather_forecast"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/changeCity"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="@color/colorText"
        android:background="@drawable/rounder_button"
        android:text="@string/change_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/myWeather"
        android:layout_marginBottom="20dp"
        />


    <Button
        android:id="@+id/myWeather"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounder_button"
        android:text="@string/my_weather"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>